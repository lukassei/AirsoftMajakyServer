<Window x:Class="Airsoft_Majaky.AutoGameEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Airsoft_Majaky"
        mc:Ignorable="d"
        Title="Nastavit automatické vypnutí hry" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Text="Nastavte počet bodů pro ukončení hry:" FontSize="13" VerticalAlignment="Center" Margin="5,38,0,78" HorizontalAlignment="Center"/>
        <TextBox Name="PointsToEndTheGameTextBox" Margin="5,60,188,53" />
        <TextBlock Grid.Column="0" Text="počet bodů" Margin="109,61,113.6,53.2" />

        <Button Grid.Row="1" Grid.Column="0" VerticalAlignment="Bottom" Content="Potvrdit" Margin="20" Name="Confirm" Click="Confirm_Click"/>
    </Grid>
</Window>
